            <td><button onclick="showsreen('.')" class="class1" type="button">&comma;</button></td>
            <td><button onclick="showsreen('0')" class="class2" type="button">0</button></td>
            <td><button onclick="calc()" class="class4" type="button">&equals;</button></td>
            <td><button onclick="showsreen('+')" class="class3" type="button">&plus;</button></td>
        </tr>
