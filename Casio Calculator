<script>
        let dot = false;
        let result = false;
        let calculation = n;

    function showsreen(n) {
        let val = document.getElementById('display').innerHTML;
        let lastpos = val.length -1;
        let controlop = val[lastpos] == '/' || val[lastpos] == '*' || val[lastpos] == '+' || val[lastpos] == '-';    
        
        if (result == true) {
                n = '';             
                result = false;
            }
    
        switch (n) {
        case '.': 
            if (dot == true) {
                n = '';               
            } else {
                dot = true;
            }
           break;
        case '0':
            if (val[0] == '0' && val.length == 1) {  
                n = '';
            }
           break;
        case '/': 
            if (val.length == 0 || val[0] == '-' && val.length == 1) {  
                n = '';
            } else if (controlop) { 
                dot = false;
                val.pop()
                document.getElementById('display').innerHTML = val;
            }
           break;
        case '*':
        if (val.length == 0 || val[0] == '-' && val.length == 1) {
                n = '';
            } else if (controlop) {
                dot = false;
                val.pop();                 
                document.getElementById('display').innerHTML = val;
            }
            break;
        case '-':
        if (controlop) {
                dot = false;
                val.pop();
                document.getElementById('display').innerHTML = val;
            } 
            break;
        case '+':
        if (val.length == 0 || val[0] == '-' && val.length == 1) {
                n = '';
            } else if (controlop) {
                dot = false;
                val.pop();
                document.getElementById('display').innerHTML = val;
            }     
            break;
        }  
        document.getElementById('display').innerHTML += n;

        }

  
    function del() {
        let val = document.getElementById('display').innerHTML;
        //let y = val.substr(0,val.length-1);
        let y = val.pop();
        //document.getElementById('display').innerHTML = y;
        document.getElementById('display').innerHTML = y;  
    }

 
    function reset() {
        document.getElementById('display').innerHTML = '';
    }


    function calc() {
        let val = document.getElementById('display').innerHTML;
        let z = parseFloat(eval(val));
        let x = Math.round(z*1000)/1000;
       if (val.length > 1) {
            document.getElementById('display').innerHTML = x; 
            result = true; 
       }

    }
</script>
